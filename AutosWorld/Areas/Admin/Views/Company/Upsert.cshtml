@model Company
@{
    ViewData["Title"] = "Company";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center">Create Company</h2>
            <hr/>
        </div>

        <div class="row">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-8 col-md-12 col-sm-12">
                <div class="mb-3">
                    <label asp-for="Id" hidden></label>
                    <input type="hidden" asp-for="Id"/>             
                </div>
              
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
        
                <div class="mb-3">
                    <label asp-for="StreetAddress"></label>
                    <input class="form-control" asp-for="StreetAddress"/>
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City"></label>
                    <input class="form-control" asp-for="City"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div> 
                <div class="mb-3">
                    <label asp-for="State"></label>
                    <input class="form-control" asp-for="State"/>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PostalCode"></label>
                    <input class="form-control" asp-for="PostalCode"/>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div> 
                <div class="mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input class="form-control" asp-for="PhoneNumber"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

              
                    @if(Model.Id != 0)
                    {

                        <button class="btn btn-primary" type="submit" style="width:150px">Update</button>
                    }
                    else
                    {
                         <button class="btn btn-primary" type="submit" style="width:150px">Create</button>
                    }
                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
            </div>
            <div class="col-lg-2">

            </div>

        </div>
        
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }

   
}

