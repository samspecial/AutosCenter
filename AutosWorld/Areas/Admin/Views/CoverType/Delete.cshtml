@model CoverType

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Cover Type</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <button class="btn btn-primary" type="submit" style="width:150px">Delete </button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}



